<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ForgotPasswordFragment">

    <ImageView
        android:id="@+id/LogoApp"
        android:layout_width="300dp"
        android:layout_height="137dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/fahasa"
        android:layout_gravity="center"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="Khôi phục mật khẩu"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/purple_700"
        android:textSize="36sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Tài khoản:"
            android:textColor="@color/purple_700"
            tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

        <EditText
            android:id="@+id/accountIdentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            tools:ignore="Autofill,RtlHardcoded,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Mật khẩu mới:"
            android:textColor="@color/purple_700"
            tools:ignore="RtlHardcoded,TextSizeCheck" />

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/resetPass"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbtn"
        android:text="Xác nhận"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/returnBtn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedbtn"
        android:text="Quay lại"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

</LinearLayout>